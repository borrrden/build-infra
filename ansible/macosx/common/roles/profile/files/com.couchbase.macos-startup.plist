<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple Computer//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.couchbase.macos-startup</string>

    <key>StandardErrorPath</key>
    <string>/var/log/couchbase/startup.err</string>
    <key>StandardOutPath</key>
    <string>/var/log/couchbase/startup.out</string>

    <key>KeepAlive</key>
	<dict>
		<key>SuccessfulExit</key>
		<false/>
	</dict>

    <key>UserName</key>
    <string>couchbase</string>

    <key>GroupName</key>
    <string>staff</string>

    <key>ProgramArguments</key>
    <array>
        <string>/opt/buildteam/startup.sh</string>
    </array>
</dict>
</plist>
